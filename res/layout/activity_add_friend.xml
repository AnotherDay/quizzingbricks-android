<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    >
    
    <TextView
        android:id="@+id/text_email"
        style="@style/textHeader"
        android:layout_alignParentTop="true"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend By Email" 
        />
    
    <EditText 
        android:id="@+id/add_friend_email"
        android:layout_below="@id/text_email"
        style="@style/inputBoxScreenWidth"
        android:hint="email"
        android:inputType="text"
        />
    
    <Button
        android:id="@+id/add_friend_submit"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/add_friend_email"
        android:layout_alignRight="@id/add_friend_email"
        android:layout_below="@id/add_friend_email"
        android:onClick="sendAddFriend"
        android:padding="16dp"
        android:text="Add Friend" 
        />

</RelativeLayout>
    
    
</ScrollView>

