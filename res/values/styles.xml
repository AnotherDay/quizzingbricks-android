
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="textHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/textHeaderColor</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="inputBoxScreenWidth">
        <item name="android:padding">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style> 
    
    <style name="fillScreenWidth">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style> 
    
    <style name="inputBoxHeader">
        <item name="android:paddingTop">16dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingLeft">8sp</item>
    </style>

    <style name="bodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textBodyColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    

</resources>
